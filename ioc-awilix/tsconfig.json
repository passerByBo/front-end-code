{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution":"node",
        "experimentalDecorators":true,
        "noImplicitAny":true,
        "noImplicitThis": true,
        "allowSyntheticDefaultImports":true,
        "lib": [
            "es2015",
            "dom"
        ],
        "baseUrl":"./",
        "paths": {
            "@interfaces/*": ["interface/*"]
        }
    }
}